---
import { Image } from "astro:assets";
import { Layout } from "tractstack:layouts";
import { Hero } from "tractstack:components";
import { CodeHook } from "tractstack:components";
import { houston } from "tractstack:assets";
import config from "tractstack:config";
---

<Layout>
  <CodeHook target={`hero`} />
  <Hero title={config.title} desc={config.description} />
  <div class="houston">
    <Image src={houston} alt="" />
  </div>
</Layout>

<style>
  .houston {
    animation: hithere 8s ease-in-out infinite;
  }

  @keyframes hithere {
    0% {
      transform: rotate(-5deg) scale(1);
    }
    15% {
      transform: rotate(-5deg) scale(1);
    }
    20% {
      transform: rotate(10deg) scale(1.15);
    }
    25% {
      transform: rotate(-20deg) scale(1.15);
    }
    30% {
      transform: rotate(10deg) scale(1.15);
    }
    35% {
      transform: rotate(-20deg) scale(1.15);
    }
    40% {
      transform: rotate(-5deg) scale(1);
    }
    100% {
      transform: rotate(-5deg) scale(1);
    }
  }
</style>
